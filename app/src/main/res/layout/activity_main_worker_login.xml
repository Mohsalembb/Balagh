<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainUserLogin">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/costum_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="451dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">


            <TextView
                android:id="@+id/wloginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="العامل"
                android:textAlignment="center"
                android:textColor="@color/greyBlue"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/wsignup_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/costum_edittext"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:hint="Email"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            <EditText
                android:id="@+id/wsignup_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/costum_edittext"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:hint="password"
                android:inputType="textPassword"
                android:padding="8dp"

                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            <Button
                android:id="@+id/wloginButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/greyBlue"
                android:text="دخول"
                android:textSize="18sp"
                app:cornerRadius="20dp"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="ليس لديك حساب ؟ أنشئ حساب "
                android:textAlignment="center"
                android:textColor="#095FF3"
                android:textStyle="bold" />

          >

        </LinearLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>